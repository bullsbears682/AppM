# VoidSight Analytics Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/voidsight_dev
REDIS_URL=redis://localhost:6379/0

# API Keys (Development)
ENCRYPTION_KEY=dev-encryption-key-32-chars-long
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# Third-party Integrations
SENDGRID_API_KEY=your-sendgrid-key
STRIPE_SECRET_KEY=sk_test_your-stripe-test-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# External Data Sources
MARKET_DATA_API_KEY=your-market-data-key
INDUSTRY_BENCHMARKS_API=your-benchmarks-api-key

# Security Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Feature Flags
ENABLE_MONTE_CARLO=true
ENABLE_ENTERPRISE_FEATURES=false
ENABLE_COLLABORATION=false
ENABLE_BULK_CALCULATIONS=true

# Development Tools
SQLALCHEMY_ECHO=false
LOG_LEVEL=INFO
PROFILING_ENABLED=false

# Cache Settings
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=voidsight_

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@company.com
MAIL_PASSWORD=your-app-password

# File Storage
UPLOAD_FOLDER=uploads/
MAX_CONTENT_LENGTH=16777216  # 16MB

# API Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/2
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_CALCULATION=10 per minute