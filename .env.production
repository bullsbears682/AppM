# INFINEX ROI CALCULATOR - PRODUCTION ENVIRONMENT
# Enterprise Configuration Template
# Copy this file to .env and update with your production values

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
FLASK_ENV=production
FLASK_APP=app.py
APP_NAME="Infinex ROI Calculator"
APP_VERSION="3.0 Enterprise"
COMPANY_NAME="Infinex Analytics"

# ==============================================================================
# SECURITY & ENCRYPTION
# ==============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Password hashing
BCRYPT_LOG_ROUNDS=12

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# PostgreSQL (Recommended for production)
DATABASE_URL=postgresql://infinex:your-db-password@localhost:5432/infinex_roi
DB_PASSWORD=your-secure-database-password

# Connection pool settings
SQLALCHEMY_POOL_SIZE=20
SQLALCHEMY_POOL_RECYCLE=3600
SQLALCHEMY_POOL_PRE_PING=true

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
CACHE_DEFAULT_TIMEOUT=300

# ==============================================================================
# EMAIL CONFIGURATION
# ==============================================================================
# SMTP Settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@company.com
MAIL_PASSWORD=your-email-app-password
MAIL_DEFAULT_SENDER=noreply@infinex.dev

# SendGrid (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# ==============================================================================
# PAYMENT PROCESSING
# ==============================================================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal Configuration (Optional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=live

# ==============================================================================
# CLOUD STORAGE
# ==============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=infinex-roi-uploads
AWS_REGION=us-east-1

# Azure Storage (Alternative)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_CONTAINER=infinex-uploads

# MinIO (Self-hosted S3)
MINIO_ACCESS_KEY=infinex-admin
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=infinex-roi

# ==============================================================================
# MONITORING & ANALYTICS
# ==============================================================================
# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Mixpanel Analytics
MIXPANEL_TOKEN=your-mixpanel-token

# ==============================================================================
# EXTERNAL API KEYS
# ==============================================================================
# Financial Data APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
YAHOO_FINANCE_API_KEY=your-yahoo-finance-key
QUANDL_API_KEY=your-quandl-api-key

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Currency Exchange
EXCHANGERATE_API_KEY=your-exchange-rate-api-key

# ==============================================================================
# RATE LIMITING
# ==============================================================================
RATELIMIT_DEFAULT="1000 per hour"
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/infinex_roi.log
ENABLE_FILE_LOGGING=true
ENABLE_SYSLOG=false

# ==============================================================================
# SSL/TLS CONFIGURATION
# ==============================================================================
SSL_DISABLE=false
SSL_CERT_PATH=/etc/ssl/certs/infinex.crt
SSL_KEY_PATH=/etc/ssl/private/infinex.key

# ==============================================================================
# BUSINESS LOGIC
# ==============================================================================
# Calculation Settings
CALCULATION_PRECISION=4
MIN_INVESTMENT=1000
MAX_INVESTMENT=100000000
MIN_TIMELINE=1
MAX_TIMELINE=120
MONTE_CARLO_ITERATIONS=10000
CONFIDENCE_LEVEL=0.95

# Trial & Subscription
TRIAL_PERIOD_DAYS=30
MAX_CALCULATIONS_FREE=10
LICENSE_CHECK_INTERVAL=3600

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
ENABLE_USER_AUTHENTICATION=true
ENABLE_DATA_PERSISTENCE=true
ENABLE_REAL_TIME_DATA=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_AUDIT_LOGGING=true
ENABLE_API_INTEGRATION=true

# ==============================================================================
# DOCKER & ORCHESTRATION
# ==============================================================================
# Docker Configuration
COMPOSE_PROJECT_NAME=infinex-roi
DOCKER_BUILDKIT=1

# Container Settings
WORKERS=4
TIMEOUT=120
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# ==============================================================================
# MONITORING SERVICES
# ==============================================================================
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-password

# Flower (Celery Monitoring)
FLOWER_USER=admin
FLOWER_PASSWORD=your-flower-password

# PgAdmin
PGADMIN_EMAIL=admin@infinex.dev
PGADMIN_PASSWORD=your-pgadmin-password

# ==============================================================================
# ELASTICSEARCH & KIBANA
# ==============================================================================
ELASTIC_PASSWORD=your-elastic-password
KIBANA_PASSWORD=your-kibana-password

# ==============================================================================
# BACKUP CONFIGURATION
# ==============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=infinex-roi-backups

# ==============================================================================
# ENTERPRISE FEATURES
# ==============================================================================
# LDAP Integration
LDAP_SERVER=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=service,dc=company,dc=com
LDAP_BIND_PASSWORD=your-ldap-password
LDAP_BASE_DN=dc=company,dc=com

# SAML SSO
SAML_METADATA_URL=https://your-saml-provider/metadata
SAML_ENTITY_ID=infinex-roi-calculator
SAML_CERTIFICATE=/etc/ssl/saml/saml.crt
SAML_PRIVATE_KEY=/etc/ssl/saml/saml.key

# ==============================================================================
# DEVELOPMENT & TESTING (Remove in production)
# ==============================================================================
# Development settings (set to false in production)
DEBUG=false
TESTING=false
ENABLE_DEBUG_TOOLBAR=false

# Testing database
TEST_DATABASE_URL=sqlite:///:memory:

# ==============================================================================
# PERFORMANCE & SCALING
# ==============================================================================
# Cache settings
CACHE_TIMEOUT=300
SESSION_TIMEOUT=3600
MAX_WORKERS=4

# CDN Configuration
CDN_DOMAIN=cdn.infinex.dev
STATIC_URL_PREFIX=https://cdn.infinex.dev/static

# ==============================================================================
# COMPLIANCE & LEGAL
# ==============================================================================
# Data retention
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=2555

# Privacy
ENABLE_COOKIE_CONSENT=true
PRIVACY_POLICY_URL=https://infinex.dev/privacy
TERMS_OF_SERVICE_URL=https://infinex.dev/terms

# ==============================================================================
# LOCALIZATION
# ==============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh
DEFAULT_TIMEZONE=UTC
DEFAULT_CURRENCY=USD

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
API_VERSION=v3.0
API_RATE_LIMIT="1000 per hour"
API_TITLE="Infinex ROI Calculator API"
API_DESCRIPTION="Professional Investment Analysis and ROI Calculation API"

# Webhook settings
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30

# ==============================================================================
# SECURITY HEADERS
# ==============================================================================
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
X_FRAME_OPTIONS=DENY

# ==============================================================================
# CUSTOM BRANDING (Enterprise)
# ==============================================================================
CUSTOM_LOGO_URL=https://your-domain.com/logo.png
CUSTOM_FAVICON_URL=https://your-domain.com/favicon.ico
CUSTOM_CSS_URL=https://your-domain.com/custom.css
BRAND_PRIMARY_COLOR=#6366f1
BRAND_SECONDARY_COLOR=#8b5cf6

# ==============================================================================
# NOTES FOR PRODUCTION DEPLOYMENT
# ==============================================================================
# 1. Change all default passwords and secrets
# 2. Use environment-specific values for each deployment
# 3. Store sensitive values in secure key management (AWS Secrets Manager, etc.)
# 4. Enable SSL/TLS in production
# 5. Configure proper backup strategies
# 6. Set up monitoring and alerting
# 7. Review and adjust rate limits based on usage patterns
# 8. Configure CDN for static assets
# 9. Set up log aggregation and analysis
# 10. Test disaster recovery procedures